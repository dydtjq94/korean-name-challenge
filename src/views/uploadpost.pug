extends layouts/main

block content
    span postUpload
    .formContainer
        .recordContainer#jsRecorderContainer
            video#jsVideoPreview
        form(action=routes.post+routes.upload(prompt.id), method="post")
            each item in prompt.prompt
                span #{item}
                input(type="text" name="content" placeholder=item required) 
            input(type="submit" value="UPLOAD POST")
        div.meaning #{prompt.meaning}